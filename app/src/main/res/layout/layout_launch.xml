<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/launchBackground">

    <ImageView
        android:id="@+id/launch_icon"
        android:background="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/launch_tv1"
        android:text="@string/app_name"
        android:layout_below="@+id/launch_icon"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/launch_tv2"
        android:layout_below="@+id/launch_tv1"
        android:textSize="15dp"
        android:text="防伪   安全   鉴别"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
